@model ShopManager.ViewModels.AcceptTermsViewModel

<div>
    <h1 class="display-4">Welcome</h1>

    <form method="post" asp-controller="Home" asp-action="CheckBoxInput">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="modelInput.AcceptTerms" asp-for="@Model.AcceptTerms" value="@Model.AcceptTerms" />

            @* modelInput là tham số truyền vào trong phương thức HttpPost *@

            @* @Html.CheckBox("AcceptTerms") *@
            <label  class="form-check-label" asp-for="Title">
                @Model.Title
            </label>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>

</div>
